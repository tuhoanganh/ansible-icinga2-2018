<Component Thruk::Backend>
  <peer>
    name   	= {{ hostvars[inventory_hostname].backend_name }}
    id      	= d857d
    type    	= livestatus
    <options>
      peer 	= {{ hostvars[inventory_hostname].backend_ip }}:6558
    </options>
  </peer>
</Component>

<configtool>
  core_type	= icinga2
  core_conf	= /etc/icinga2/icinga2.conf
  obj_check_cmd	= /run/icinga2/cmd/icinga2.cmd -v /run/icinga2/cmd/icinga2.cmd
</configtool>
